<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.margglee.MichiganWeatherApp">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cloud"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:versionCode="1"
        android:versionName="1.0.0"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".SnowStatus"></activity>
        <activity android:name=".RainyStatus" />
        <activity android:name=".StormStatus" />
        <activity android:name=".PartlyCloudyStatus" />
        <activity android:name=".SunnyStatus" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>